{
    "title": "Schema definitions for test business objects and transfer structures",
    
    "definitions": {
    
        "given_name": {
            "type": "string",
            "maxLength": 30
        },
        "family_name": {
            "type": "string",
            "maxLength": 30
        },
        "age": {
            "type": "integer",
            "minimum": 0,
            "maximum": 120
        },
        
        "person": {
            "type": "object",
            "java": "au.com.thoughtpatterns.tmp.Person",
            "properties": {
                "given_name": { "$ref": "#/definitions/given_name" },
                "family_name": { "$ref": "#/definitions/family_name" },
                "age": { "$ref": "#/definitions/age" },
                "hobbies": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "java": "au.com.thoughtpatterns.tmp.Hobby",
                        "properties": {
                            "hobby": { "type": "string" },
                            "years_practiced": { "type": "integer", "minimum": 0 }
                        }
                    }
                }
            }
        },
        
        "family": {
            "type": "object",
            "java": "au.com.thoughtpatterns.tmp.Family",
            "properties": {
                "mother": { "$ref": "#/definitions/person" },
                "father": { "$ref": "#/definitions/person" },
                "children": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/person" }
                } 
            }
        }
        
    }
}